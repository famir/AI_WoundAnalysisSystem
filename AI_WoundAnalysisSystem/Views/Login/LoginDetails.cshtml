@Html.Action("PatientRegister", "Patient",new { Area="Patient"})
<section id="login" class="section-padding">
    @using (@Html.BeginForm("LoginDetails", "Login", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="ser-title">Login</h2>
                    <hr class="botm-line">
                </div>
                <div class="col-md-12 col-sm-12 marb20">

                    @*<form>
                            <label class="radio-inline">
                                <input type="radio" name="optradio">Operator
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="optradio">Patient
                            </label>
                        </form>*@
                    <div class="contact-info">
                        <h3 class="cnt-ttl">Login to your account!</h3>
                        <div class="space"></div>
                        <div class="row">
                            <div class="form-horizontal">


                                <div class="col-md-6">
                                    <div class="form-group">

                                        <div class="col-md-6">

                                            @Html.LabelFor(m => m.Username, new { @class = "mandatory" })
                                            @Html.TextBoxFor(m => m.Username, new { Class = "form-control", Placeholder = "Enter Username" })
                                            @Html.ValidationMessageFor(m => m.Username)
                                        </div>

                                        <div class="col-md-6">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-6">
                                            @Html.LabelFor(m => m.Password, new { @class = "mandatory" })

                                            @Html.PasswordFor(m => m.Password, new { Class = "form-control", Placeholder = "Enter Password" })
                                            @Html.ValidationMessageFor(m => m.Password)
                                        </div>
                                        <div class="col-md-6">
                                        </div>
                                    </div>

                                    <div class="form-group">



                                        <a class="btn btn-cancel btn-sm" title="Cancel" href="#banner">
                                            Cancel
                                        </a>



                                        <button type="submit" class="btn btn-primary btn-sm" title="Login" id="btnLogin" href="#login">
                                            Login
                                        </button>


                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <hr />
    }

</section>

